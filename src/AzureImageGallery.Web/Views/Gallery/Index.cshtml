@model PaginatedList<GalleryDetailModel>


<div class="container body-content">
    <div class="row gallery-content">
        @foreach (var image in Model)
        {
            @* try using embed-responsive embed-responsive-16by9 in anchor tag *@
            <div class="col-md-3 col-sm-12 col-12">
                <div class="card mb-2">
                    <a class="" asp-controller="Gallery" asp-action="Detail" asp-route-id="@image?.Id">
                        <img src="@image.Url" alt="Azure Cloud Hosted Image" title="@image.Title" class="card-img-top img-fluid img-thumbnail" 
                        style="width: 100%;height: 15rem;object-fit: cover;">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@image.Title</h5>
                        <p class="card-text">@image.Created</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @{ 
        var disablePrevious = !Model.HasPrevious ? "disabled" : "";
        var disableNext = !Model.HasNext ? "disable" : "";
    }
        <a asp-action="Index" 
           asp-controller="Gallery" 
           asp-route-pageNumber="@(Model.CurrentPage - 1)"
           class="btn btn-primary @disablePrevious">Previous</a>

        <a asp-action="Index" 
           asp-controller="Gallery" 
           asp-route-pageNumber="@(Model.CurrentPage + 1)"
           class="btn btn-primary @disableNext">Next</a>
</div>
